{
  "name": "le-studio-agency",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon ./bin/www",
    "start": "node ./bin/www",
    "deploy": "node ./bin/minify && sc-deploy production"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "~4.16.1",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "launder": "^1.7.0",
    "morgan": "~1.9.1",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@node-minify/core": "^8.0.6",
    "@node-minify/cssnano": "^8.0.6",
    "@node-minify/terser": "^8.0.6",
    "nodemon": "^3.1.0"
  },
  "nodemonConfig": {
    "delay": 100,
    "verbose": false,
    "watch": [
      "./app.js",
      "routes",
      "./views/partials/*.hbs"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "public"
    ],
    "ext": "json, js, hbs"
  }
}
