<section class="u-align-center u-clearfix u-palette-4-dark-2 u-section-9" id="contact">
  <div class="u-clearfix u-sheet u-sheet-1">
    <div class="data-layout-selected u-clearfix u-expanded-width u-layout-wrap u-layout-wrap-1">
      <div class="u-layout">
        <div class="u-layout-row">
          <div
            class="u-align-left u-container-style u-layout-cell u-size-30 u-white u-layout-cell-1 customAnimationOut">
            <div class="u-container-layout u-container-layout-1">
              <h2 class="u-text u-text-1">Contact us</h2>
              <p class="u-text u-text-2"> Use our contact form for all information requests.<br>
                <br>Feel free to get in touch with us by phone also.
              </p>
            </div>
          </div>
          <div class="u-container-style u-layout-cell u-size-30 u-white u-layout-cell-2 customAnimationOut">
            <div class="u-container-layout u-container-layout-2">
              {{!-- <h4 class="u-custom-font u-font-montserrat u-text u-text-default u-text-3"> Sign up for the newsletter
              </h4>
              <p class="u-custom-font u-font-montserrat u-text u-text-default u-text-4"> Want to be the first to read
                our news? Subscribe to the newsletter to keep abreast of all events.</p> --}}
              <div class="u-expanded-width u-form u-form-1">
                <form action="/contact" method="post"
                  class="u-clearfix u-form-horizontal u-form-spacing-0 u-inner-form" source="email" name="form"
                  style="padding: 0px;">
                  <div class="cf-turnstile" data-sitekey="0x4AAAAAAA0eCzIB1fzRijpW"></div>
                  <div class="u-form-email u-form-group u-label-none">
                    <label for="email-6564" class="u-label">Email</label>
                    <input type="email" placeholder="Enter your email address" id="email-6564" name="email"
                      class="u-border-2 u-border-no-left u-border-no-right u-border-no-top u-border-palette-4-dark-2 u-input u-input-rectangle u-none"
                      required="" wfd-id="id414">

                    <label for="message-6564" class="u-label">Message</label>
                    <textarea id="message-6564" class="u-input" name="message" placeholder="Add a little something about you..." rows="5" cols="33"></textarea>
                  </div>
                  <div class="u-align-left u-form-group u-form-submit u-label-none">
                    <input type="submit"
                      class="u-active-black u-border-none u-btn u-btn-submit u-button-style u-hover-black u-palette-1-base u-btn-1" value="Submit">
                  </div>
                  <div class="u-form-send-message u-form-send-success"> Thank you! Your message has been sent. </div>
                  <div class="u-form-send-error u-form-send-message"> Unable to send your message. Please fix errors
                    then try again.
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="u-expanded-width u-list u-list-1">
      <div class="u-repeater u-repeater-1">
        <div class="u-align-left u-container-style u-list-item u-repeater-item u-list-item-1 customAnimationOut">
          <div class="u-container-layout u-similar-container u-valign-top u-container-layout-3"><span
              class="u-file-icon u-icon u-text-palette-1-base u-icon-1"><img loading="lazy"
                src="/images/pin.png" alt=""></span>
            <div class="u-custom-font u-font-montserrat u-text u-text-5"> Our Office Location</div>
            <p class="u-text u-text-6" style="color: white;">Entrepreneurial People<br>32 rue Victor Lagrange, Lyon, France</p>
            <p class="u-text u-text-3" style="color: white; margin-top: 40px">{{ year }}. All rights reserved by <a href="/">{{ title }}</a></p>
          </div>
        </div>
        <div class="u-align-left u-container-style u-list-item u-repeater-item u-list-item-2 customAnimationOut">
          <div class="u-container-layout u-similar-container u-valign-top u-container-layout-4"><span
              class="u-file-icon u-icon u-text-palette-1-base u-icon-2"><img loading="lazy"
                src="/images/phone.png" alt=""></span>
            <div class="u-custom-font u-font-montserrat u-text u-text-7"> Phone</div>
            <p class="u-text u-text-8" style="color: white;">04 86 11 95 00<br>
            </p>
            <p class="u-text u-text-9" style="color: white; margin-top: 70px"></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
